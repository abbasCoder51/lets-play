<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!-- <parameters>
        
    </parameters> -->

    <imports>
        <import resource="serializer.xml"/>
    </imports>
    <services>
        <defaults autowire="true" autoconfigure="true" public="false"/>

        <prototype namespace="Mleko\LetsPlay\" resource="../src/*"
                   exclude="../src/{Entity,Http,Migrations,Tests,Kernel.php}"/>
        <prototype namespace="Mleko\LetsPlay\Controller\" resource="../src/Controller">
            <tag name="controller.service_arguments"/>
        </prototype>

        <service id="Mleko\LetsPlay\Repository\JsonStorage">
            <argument>%kernel.project_dir%/var/entities.json</argument>
        </service>
        <service id="Mleko\LetsPlay\Repository\Storage" alias="Mleko\LetsPlay\Repository\JsonStorage"/>
        <service id="Mleko\LetsPlay\Repository\UserRepository">
            <argument type="service" id="Mleko\LetsPlay\Repository\JsonStorage"/>
        </service>
        <service id="security.user_provider.user_actor" class="Mleko\LetsPlay\Security\UserActorProvider">
            <argument type="service" id="Mleko\LetsPlay\Repository\UserRepository"/>
        </service>
        <service class="Mleko\LetsPlay\Http\ResponseListener" id="mleko.lets_play.http.response_listener">
            <argument type="service" id="mleko.alchemist.serializer"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>

    <!-- ... -->
</container>
